{
  "name": "moviegpt",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "prettier": "prettier --write \"src/**/*.ts|src/**/*.js|src/**/*.tsx\"",
    "prettier:check": "prettier --check \"src/**/*.ts|src/**/*.js|src/**/*.tsx\"",
    "android-windows": "npm run android-bundle && react-native run-android",
    "clean-build": "cd android && gradlew clean && cd .. && npm run android-windows",
    "android-bundle": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "clean-resources": "cd android/app/src/main/res && rm -rf android/app/src/main/res/drawable-* && rm -r raw && cd ..",
    "android-release": "cd android && ./gradlew clean && ./gradlew assembleRelease",
    "android-aab": "cd android && ./gradlew clean && ./gradlew bundleRelease",
    "android-debug": "npm run android-bundle && cd android && ./gradlew clean &&./gradlew assembleDebug",
    "e2e:ios": "npm run build:ios && npm run test:ios",
    "e2e:android": "yarn build:android && yarn test:android",
    "test:ios": "detox test -c ios.debug",
    "test:android": "detox test -c android.emu.debug",
    "build:ios": "detox build -c ios.debug",
    "build:android": "npm run android-bundle && detox build -c android.emu.debug",
    "emulators": "emulator -list-avds",
    "simulators": "xcrun simctl list"
  },
  "dependencies": {
    "@openspacelabs/react-native-zoomable-view": "^2.1.1",
    "add": "^2.0.6",
    "axios": "^1.3.4",
    "fraction-unicode": "^1.0.1",
    "html-react-parser": "^3.0.15",
    "react": "18.2.0",
    "react-native": "0.71.6",
    "react-native-anchor-point": "^1.0.6",
    "react-native-gesture-handler": "^2.9.0",
    "react-native-haptic-feedback": "^2.0.3",
    "react-native-reanimated": "2.14.4",
    "react-native-safe-area-context": "^4.5.0",
    "react-native-search-bar": "^3.5.1",
    "react-native-svg": "^13.9.0",
    "react-native-vector-icons": "^9.2.0",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.73.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native"
  }
}
